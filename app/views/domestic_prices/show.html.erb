<ol class="breadcrumb">
  <li class="active">国内价格详情</li>
</ol>
<%= form_for(@domestic_price, html: {class: 'form-horizontal ajax-submit'}) do |f| %>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">商品</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <p class="form-control-static">
        <a href="<%= product_path @domestic_price.sku&.product_id %>">
          <%= @domestic_price.sku&.product&.name %>
        </a>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">等级</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <%= f.text_field :sku_id, value: f.object.sku.try(:level_text),class: 'form-control',disabled: 'disabled' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">平台</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <%= f.text_field :site_id, value: f.object.site.try(:name),class: 'form-control',disabled: 'disabled' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">仓库</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <%= f.text_field :warehouse_id, value: f.object.warehouse.try(:name),class: 'form-control',disabled: 'disabled' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">非会员价</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <%= f.number_field :nomember_price, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">会员价</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <%= f.number_field :member_price, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>

  <div class="form-group actions">
    <div class="col-sm-offset-4 col-md-offset-3 col-lg-offset-2 col-sm-8">
      <a class="btn btn-info" href="<%= edit_domestic_price_path @domestic_price %>">修改</a>
      <a class="btn btn-warning" href="<%= params[:redirect_to].presence || domestic_prices_path %>">返回</a>
    </div>
  </div>
</div>
<% end %>
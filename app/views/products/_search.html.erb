<%= form_for(@search, url: path, method: 'GET', enforce_utf8: false, html: {class: 'form-inline search'}) do |f| %>
  <div class="form-group">
    <%= f.label 'name|product_no', '产品编号/名称' %>
    <%= f.text_field 'name|product_no', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'product_category_id', '产品分类' %>
    <%=
      f.select(
        :product_category_id,
        product_categories,
        {},
        {class: 'form-control'}
      )
    %>
  </div>
  <% if params[:search][:product_category_id] %>
    <input type="hidden" name="search[product_category_id]" value="<%= params[:search][:product_category_id] %>">
  <% else %>
    <input type="hidden" name="search[product_category_id]" value="<%= params[:product_category_id] %>">
  <% end %>
  <div class="form-group">
    <%= f.label 'spec', '产品规格' %>
    <%= f.text_field 'spec', class: 'form-control' %>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-info">搜索</button>
  </div>
<% end %>

<a href="<%= new_user_path %>" class="btn btn-info add">新增用户</a>

<table class="table table-bordered table-striped management">
  <thead>
    <tr>
      <th>工号</th>
      <th>姓名</th>
      <th>手机号</th>
      <th>价格管理员</th>
      <th>管理员</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.employee_number %></td>
        <td><%= user.name %></td>
        <td><%= user.mobile %></td>
        <td><%= user.price_manager? ? '是' : '' %></td>
        <td><%= user.admin? ? '是' : '' %></td>
        <td>
          <a href="<%= user_path(user) %>">查看</a>
          <a href="<%= edit_user_path(user) %>">编辑</a>
          <a href="<%= user_path(user) %>" class="delete">删除</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users %>

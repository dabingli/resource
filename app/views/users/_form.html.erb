<%= form_for(@user, html: {class: 'form-horizontal ajax-submit'}) do |f| %>
  <div class="form-group required">
    <label for="employee_number" class="col-sm-3 col-md-3 col-lg-2 control-label">工号</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <input type="text" class="form-control" name="user[employee_number]" id="employee_number" value="<%= @user.employee_number %>" required>
    </div>
  </div>

  <div class="form-group required">
    <label for="name" class="col-sm-3 col-md-3 col-lg-2 control-label">姓名</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <input type="text" class="form-control" name="user[name]" id="name" value="<%= @user.name %>" required>
    </div>
  </div>

  <div class="form-group">
    <label for="mobile" class="col-sm-3 col-md-3 col-lg-2 control-label">手机号</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <input type="text" class="form-control" name="user[mobile]" id="mobile" value="<%= @user.mobile %>">
    </div>
  </div>

  <div class="form-group required">
    <label class="col-sm-3 col-md-3 col-lg-2 control-label">管理员</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <label class="radio-inline">
        <input type="radio" name="user[admin]" value="1" <%= 'checked' if @user.admin? %>> 是
      </label>
      <label class="radio-inline">
        <input type="radio" name="user[admin]" value="0" <%= 'checked' if !@user.admin? %>> 否
      </label>
    </div>
  </div>

  <div class="form-group <%= 'required' if @user.id.nil? %>">
    <label for="password" class="col-sm-3 col-md-3 col-lg-2 control-label">密码</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <input type="password" class="form-control" name="user[password]" id="password" <%= 'required' if @user.id.nil? %>>
    </div>
  </div>

  <div class="form-group <%= 'required' if @user.id.nil? %>">
    <label for="password_confirmation" class="col-sm-3 col-md-3 col-lg-2 control-label">确认密码</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <input type="password" class="form-control" name="user[password_confirmation]" id="password_confirmation" <%= 'required' if @user.id.nil? %>>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-2 col-sm-6">
      <button type="submit" class="btn btn-primary"><%= @user.id.nil? ? '添加' : '更新' %></button>
      <button type="reset" class="btn btn-danger">重置</button>
    </div>
  </div>
<% end %>

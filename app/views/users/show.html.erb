<h1>用户<small>详情</small></h1>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">ID</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <p class="form-control-static"><%= @user.id %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">工号</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <p class="form-control-static"><%= @user.employee_number %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">姓名</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <p class="form-control-static"><%= @user.name %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">手机号</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <p class="form-control-static"><%= @user.mobile %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">管理员</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <p class="form-control-static"><%= @user.admin? ? '是' : '否' %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">创建时间</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <p class="form-control-static"><%= @user.created_at.strftime '%Y-%m-%d %H:%M:%S' %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 col-md-3 col-lg-2 control-label">最后更新时间</label>
    <div class="col-sm-8 col-md-8 col-lg-6">
      <p class="form-control-static"><%= @user.updated_at.strftime '%Y-%m-%d %H:%M:%S' %></p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-md-offset-3 col-lg-offset-2 col-sm-8">
      <a class="btn btn-info" href="<%= edit_user_path @user %>">修改</a>
    </div>
  </div>
</div>
